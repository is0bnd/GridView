source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
inhibit_all_warnings!
use_frameworks!

def pods
    #网络请求
    pod 'Alamofire'
    
    #图片缓存异步加载
    pod 'Kingfisher'
    
    #Json解析
    pod 'ObjectMapper'
    pod 'SwiftyJSON'
    
    #下拉刷新
    pod 'MJRefresh'
    
    #列表空行占位图
#pod 'HGPlaceholders'
    
end

target 'GridviewDemo' do
    pods
end
